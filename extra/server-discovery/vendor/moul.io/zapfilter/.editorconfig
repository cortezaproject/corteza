root = true

[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

[*.mod]
indent_style = tab

[{Makefile,**.mk}]
indent_style = tab

[*.go]
indent_style = tab

[*.css]
indent_size = 2

[*.proto]
indent_size = 2

[*.ftl]
indent_size = 2

[*.toml]
indent_size = 2

[*.swift]
indent_size = 4

[*.tmpl]
indent_size = 2

[*.js]
indent_size = 2
block_comment_start = /*
block_comment_end = */

[*.{html,htm}]
indent_size = 2

[*.bat]
end_of_line = crlf

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[.{babelrc,eslintrc,prettierrc}]
indent_size = 2

[{Fastfile,.buckconfig,BUCK}]
indent_size = 2

[*.diff]
indent_size = 1

[*.m]
indent_size = 1
indent_style = space
block_comment_start = /**
block_comment = *
block_comment_end = */

[*.java]
indent_size = 4
indent_style = space
block_comment_start = /**
block_comment = *
block_comment_end = */
