      "Path": "/exec/{procedure}",
      "Parameters": {
        "path": [
          {
            "name": "procedure",
            "required": true,
            "title": "Name of procedure to execute",
            "type": "string"
          }
        ],
        "post": [
          {
            "name": "args",
            "required": false,
            "title": "Procedure arguments",
            "type": "[]ProcedureArg"
          }
        ]
      }
    },
    {
