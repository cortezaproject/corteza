  "APIs": [
    {
      "Name": "report",
      "Method": "GET",
      "Title": "Generates report from module records",
      "Path": "/report",
      "Parameters": {
        "get": [
          {
            "name": "metrics",
            "required": false,
            "title": "Metrics (eg: 'SUM(money), MAX(calls)')",
            "type": "string"
          },
          {
            "name": "dimensions",
            "required": true,
            "title": "Dimensions (eg: 'DATE(foo), status')",
            "type": "string"
          },
          {
            "name": "filter",
            "required": false,
            "title": "Filter (eg: 'DATE(foo) \u003e 2010')",
            "type": "string"
          }
        ]
      }
    },
    {
      "Name": "list",
      "Method": "GET",
      "Title": "List/read records from module section",
      "Path": "/",
      "Parameters": {
        "get": [
          {
            "name": "filter",
            "required": false,
            "title": "Filtering condition",
            "type": "string"
          },
          {
            "name": "page",
            "required": false,
            "title": "Page number",
            "type": "uint"
          },
          {
            "name": "perPage",
            "required": false,
            "title": "Returned items per page (default 50)",
            "type": "uint"
          },
          {
            "name": "sort",
            "required": false,
            "title": "Sort field (default id desc)",
            "type": "string"
          }
        ]
      }
    },
    {
